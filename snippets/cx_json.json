// https://mp.weixin.qq.com/debug/wxadoc/dev/framework/config.html
{
    "cx-pages": {
        "prefix": "cx-pages",
        "body": [
            "\"pages\": [",
            "\"$page\"",
            "]"
        ],
        "description": "设置页面路径"
    },
    "cx-window": {
        "prefix": "cx-window",
        "body": [
            "\"window\": {",
            "\"navigationBarBackgroundColor\": \"#000000\",",
            "\"navigationBarTextStyle\": \"white\",",
            "\"navigationBarTitleText\": \"\",",
            "\"backgroundColor\": \"#ffffff\",",
            "\"backgroundTextStyle\": \"dark\",",
            "\"enablePullDownRefresh\": false",
            "}"
        ],
        "description": "设置默认页面的窗口表现"
    },
    "cx-navigationBar-style": {
        "prefix": "cx-navigationBar-style",
        "body": [
            "\"navigationBarBackgroundColor\": \"#000000\",",
            "\"navigationBarTextStyle\": \"white\","
        ],
        "description": ""
    },
    "cx-navigationBar-title": {
        "prefix": "cx-navigationBar-title",
        "body": "\"navigationBarTitleText\": \"$1\",",
        "description": ""
    },
    "cx-tabBar": {
        "prefix": "cx-tabBar",
        "body": [
            "\"tabBar\": {",
            "\"color\": \"$color\",",
            "\"selectedColor\": \"$selectedColor\",",
            "\"backgroundColor\": \"$backgroundColor\",",
            "\"borderStyle\": \"black\",",
            "\"position\": \"bottom\",",
            "\"list\": [",
            "$tabs",
            "]",
            "}"
        ],
        "description": "设置底部 tab 的表现"
    },
    "cx-tab": {
        "prefix": "cx-tab",
        "body": [
            "{",
            "\"pagePath\": \"$pagePath\",",
            "\"iconPath\": \"$iconPath\",",
            "\"selectedIconPath\": \"$selectedIconPath\",",
            "\"text\": \"$text\"",
            "}"
        ],
        "description": ""
    },
    "cx-networkTimeout": {
        "prefix": "cx-networkTimeout",
        "body": [
            "\"networkTimeout\": {",
            "\"request\": 60000,",
            "\"connectSocket\": 60000,",
            "\"uploadFile\": 60000,",
            "\"downloadFile\": 60000",
            "}"
        ],
        "description": "设置网络超时时间"
    },
    "cx-debug": {
        "prefix": "cx-debug",
        "body": "\"debug\": true",
        "description": "设置是否开启 debug 模式"
    },
    "cx-page": {
        "prefix": "cx-page",
        "body": [
            "\"navigationBarBackgroundColor\": \"#000000\",",
            "\"navigationBarTextStyle\": \"white\",",
            "\"navigationBarTitleText\": \"\",",
            "\"backgroundColor\": \"#ffffff\",",
            "\"backgroundTextStyle\": \"dark\",",
            "\"enablePullDownRefresh\": false,",
            "\"disableScroll\": false"
        ],
        "description": ""
    },
    "cx-refresh": {
        "prefix": "cx-refresh",
        "body": "\"enablePullDownRefresh\": true,",
        "description": ""
    }
}